<Page x:Class="Bazy.Widoki"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bazy"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1000"
      Title="Widoki">

    <Grid Margin="0,0,0,0">
        <Grid.Background>
            <ImageBrush ImageSource="/memes/fgiven.png" Stretch="Fill"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="187*"/>
            <RowDefinition Height="63*"/>
        </Grid.RowDefinitions>
        <ListView x:Name="listView" HorizontalAlignment="Left" Margin="435,90,0,132" Width="190" MouseDoubleClick="listView_MouseDoubleClick" RenderTransformOrigin="0.066,-0.454">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="33,229,0,0" VerticalAlignment="Top" ItemsSource="{Binding}"  MaxHeight="360"/>

    </Grid>
</Page>
